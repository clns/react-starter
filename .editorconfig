# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
max_line_length = 80

# Matches the exact files either package.json or .travis.yml
[.travis.yml]
indent_style = space
indent_size = 2

[*.{md,html,ctp,tpl}]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[COMMIT_EDITMSG]
max_line_length = 72
